<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
        integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <% mytasks.forEach(mt=>{%>
        <div class="card  <%=mt.name%>">
            <div data-id="<%=mt._id%>" class="cunter">
                <p class="plus">➕</p>
                <p class="sum"><%=mt.likes||0%></p>
                <p class="minus">➖</p>
            </div>
            <div class="card-header">
                <div class="img"><img src="<%=mt.foto%>" alt="user" width="20%"></div>
                <div class="name"><%=mt.name%></div>
                <div class="date"><%=mt.updatedAt.toLocaleDateString()%></div>
                <div class="btn">
                    <a href="/reply/?data=<%=mt._id%>" class="reply"><i class="fas fa-level-up-alt"></i>Reply</a>
                    <a href="/delete/<%=mt._id%>" class="delete"><i class="fas fa-trash-alt"></i>Delete</a>
                </div>

            </div>


            <div class="card-body">
                <p class="card-text"><%=mt.text%></p>
            </div>

        </div>
        <% mycoments.forEach(mc=>{%>
        <% if(mc.id==mt._id){ %>


        <div class="card com">
            <div class="card-header">
                <div class="img"><img src="<%=mc.foto%>" alt="user" width="20%"></div>
                <div class="name"><%=mc.name%></div>
                <div class="date"><%=mc.updatedAt.toLocaleDateString()%></div>

            </div>
            <div class="card-body">
                <p class="card-text"><%=mc.text%></p>
            </div>
        </div>
        <% } %>
        <%})%>
        <%})%>
    </div>
    <div class="add"><a href="/task">➕</a></div>
    <script src="js/scriptHome.js"></script>
</body>

</html>